<h1>Posts</h1>

<% if user_signed_in? %>
    <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Logout?" } %>
<% else %>
    <%= link_to "Log In", new_user_session_path %>
    <%= link_to "Sign Up", new_user_registration_path %>
    <br>
<% end %>

<% unless @posts.empty? %>
<ul>
    <% @posts.each do |post| %>
        <li>
           <h3><%= post.title %></h3>
            <% if user_signed_in? %>            
                <%= post.user.email %>
            <% end %>
            <p><%= post.body %></p>
        </li>
    <% end %>
</ul>
<% end %>

<% if user_signed_in? %>
    <%= link_to "New Post",  new_post_path %>
<% end %>